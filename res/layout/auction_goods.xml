<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_bg"
    tools:context=".AuctionGoods" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/home"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/IvAuctionGoods_rb"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/jiantou_left"
            android:layout_gravity="center_vertical"/>
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:text="商品详情"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"/>
        <ImageView 
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <ScrollView 
        android:id="@+id/SvAuctionGoods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#ffffff"
                android:orientation="horizontal">
                <ImageView 
                    android:id="@+id/IvAuctionGoods_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_launcher"
                    android:layout_marginLeft="10dp"/>
                <TextView 
                    android:id="@+id/TvAuctionGoods_name"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="用户名"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"/>
                <TextView 
                    android:id="@+id/TvAuctionGoods_rank"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/home"
                    android:text="Lv3"
                    android:textStyle="italic"
                    android:layout_gravity="center_vertical"/>
                <TextView 
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <LinearLayout 
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView 
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textSize="12dp"
                            android:text="起拍价"/>
                    <TextView 
                        android:id="@+id/TvAuctionGoods_oldp"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="100"
                        android:paddingLeft="20dp"
                        android:background="@drawable/price_black"
                        android:textSize="12dp"/>
                    </LinearLayout>
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">
                        <TextView 
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textSize="16dp"
                            android:text="现价"/>
                    <TextView 
                        android:id="@+id/TvAuctionGoods_newp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="220"
                        android:background="@drawable/price_bg"
                        android:textColor="@color/home"
                        android:textSize="21dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView 
                android:id="@+id/TvAuctionGoods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="名字"
                android:textColor="#000000"
                android:background="#ffffff"
                android:paddingLeft="5dp"
                android:textSize="25dp"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#ffffff"
                android:orientation="vertical">
                
                <TextView 
                    android:id="@+id/tv_AuctionGoodsintro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我是abvsda我是abvsda我是abvsda我是abvsda我是abvsda我是abvsda我是abvsda我是abvsda我是abvsda"
                    />
               
                <ImageView 
                    android:id="@+id/IvAuctionGoods_iv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_launcher"/>
                <ImageView 
                    android:id="@+id/IvAuctionGoods_iv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_launcher"/>
                <ImageView 
                    android:id="@+id/IvAuctionGoods_iv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_launcher"/>
                <ImageView 
                    android:id="@+id/IvAuctionGoods_iv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_launcher"/>
           
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">
                <TextView 
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="得主"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"/>
                <ImageView 
                    android:id="@+id/IvAuctionGoods_wantuser"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_launcher"/>
                <TextView 
                    android:id="@+id/TvAuctionGoods_wantuser"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:text="用户名"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            
        </LinearLayout>
        
    </ScrollView>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:paddingTop="1dp"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:layout_width="0dp">
        <ImageView 
            android:id="@+id/IvAuctionGoods_zan"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:src="@drawable/zan"/>
        <TextView 
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="点赞"
            android:textSize="12dp"
            android:gravity="center"/>
        </LinearLayout>
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="3"/>
        <TextView 
            android:id="@+id/TvAuctionGoods_want"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:text="加价"
            android:textSize="20dp"
            android:background="@color/home"
            android:textColor="#ffffff"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TvMessage_top"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:text="消息"
            android:textColor="#ffffff"
            android:background="@drawable/hometop_bg"
            android:gravity="center"
            android:textSize="25sp" />
        
    </LinearLayout>
    <ScrollView 
        android:id="@+id/SvMessage"
        android:layout_width="match_parent"
        android:layout_weight="11.5"
        android:layout_height="0dp">
    <LinearLayout 
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <View 
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/back_bg"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/list_shape">
            
            <ImageView 
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/tip_selected"/>
            <TextView 
                android:id="@+id/TvMessage_like"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:text="收到的赞"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="18dp"/>
            <ImageView 
                android:layout_height="20dp"
                android:layout_width="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/jiantou_grey"/>
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/back_bg"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/list_shape">
            
            <ImageView 
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/tip_selected"/>
            <TextView 
                android:id="@+id/TvMessage_message"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:text="我的留言"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="18dp"/>
            <ImageView 
                android:layout_height="20dp"
                android:layout_width="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/jiantou_grey"/>
        </LinearLayout>
        <com.example.customview.ListViewForScrollView
            android:id="@+id/LvMessage_list" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.example.customview.ListViewForScrollView>
    </LinearLayout>
    </ScrollView>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="0dp"
        android:background="#00ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" 
            android:background="#00ffffff"
            android:orientation="vertical">

            <View 
            android:layout_width="match_parent"
            android:background="#00ffffff"
            android:layout_height="30dp"/>
        <ImageButton
            android:id="@+id/IbMessage_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="bottom"
            android:background="@drawable/homebottom_bg"
            android:src="@drawable/home_black" />

        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="首页"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:textColor="#898f91"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" 
            android:background="#00ffffff"
            android:orientation="vertical">

            <View 
            android:layout_width="match_parent"
            android:background="#00ffffff"
            android:layout_height="30dp"/>
        <ImageButton
            android:id="@+id/IbMessage_cell"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="bottom"
            android:background="@drawable/homebottom_bg"
            android:src="@drawable/door_black" />

        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="机舱"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:textColor="#898f91"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" 
            android:background="#00ffffff"
            android:orientation="vertical">

        <ImageButton
            android:id="@+id/IbMessage_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/homebottom_bg"
            android:src="@drawable/add_red" />

        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="发布"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:textColor="#898f91"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" 
            android:background="#00ffffff"
            android:orientation="vertical">

            <View 
            android:layout_width="match_parent"
            android:background="#00ffffff"
            android:layout_height="30dp"/>
        <ImageButton
            android:id="@+id/IbMessage_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="bottom"
            android:background="@drawable/homebottom_bg"
            android:src="@drawable/message_red" />

        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="消息"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:textColor="#ff5555"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" 
            android:background="#00ffffff"
            android:orientation="vertical">

            <View 
            android:layout_width="match_parent"
            android:background="#00ffffff"
            android:layout_height="30dp"/>
        <ImageButton
            android:id="@+id/IbMessage_mine"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="bottom"
            android:background="@drawable/homebottom_bg"
            android:src="@drawable/person_black" />

        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="我"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:textColor="#898f91"/>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_bg"
    tools:context=".CellDetail" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/home"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/IvCellD_rb"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/jiantou_left"/>
        <TextView 
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:layout_width="0dp"/>
        <ImageView 
            android:id="@+id/IvCellD_search"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/search"/>
    </LinearLayout>
    <ScrollView 
        android:id="@+id/SvCellD"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13">
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:paddingTop="70dp"
                android:background="@drawable/ic_launcher"
                android:orientation="horizontal">
                <ImageView 
                    android:id="@+id/IvCellD_head"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/tip_normal"/>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" 
                        android:orientation="horizontal">
                        <TextView 
                        android:id="@+id/TvCellD_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxLength="11"
                        android:text="圈子名字"
                        android:textSize="17sp"
                        android:gravity="bottom"/>
                        <TextView 
                        android:id="@+id/TvCellD_rank"
                        android:layout_width="55dp"
                        android:layout_height="match_parent"
                        android:text="LV.3"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/home"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:gravity="bottom"/>
                    </LinearLayout>
                    <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" 
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        
                        <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="发布数"
                        android:textSize="12sp"
                        android:gravity="top"/>
                        <TextView 
                        android:id="@+id/TvCellD_publishnum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" 
                        android:text="100"
                        android:textSize="12sp"
                        android:paddingLeft="2dp"
                        android:gravity="top|left" />
                        <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="人气"
                        android:textSize="12sp"
                        android:gravity="top"/>
                        <TextView 
                        android:id="@+id/TvCellD_peoplenum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" 
                        android:text="100"
                        android:textSize="12sp"
                        android:paddingLeft="2dp"
                        android:gravity="top|left" />
                        <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="昨日  +"
                        android:textSize="12sp"
                        android:gravity="top"/>
                        <TextView 
                        android:id="@+id/TvCellD_addnum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" 
                        android:text="100"
                        android:textSize="12sp"
                        android:gravity="top|left" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff">
            </LinearLayout>
            <com.example.customview.ListViewForScrollView 
                android:id="@+id/LvCellD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.example.customview.ListViewForScrollView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
